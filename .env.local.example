# Firebase Configuration
# Copia questo file in .env.local e sostituisci con i tuoi valori reali di Firebase

# Firebase Console -> Project Settings -> General -> Your apps
REACT_APP_FIREBASE_API_KEY=your-api-key-here
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=1:your-sender-id:web:your-app-id
REACT_APP_FIREBASE_MEASUREMENT_ID=G-your-measurement-id

# Development Settings
REACT_APP_USE_FIREBASE_EMULATORS=false
NODE_ENV=development

# Per abilitare gli emulatori in sviluppo:
# REACT_APP_USE_FIREBASE_EMULATORS=true

# IMPORTANTE: 
# 1. NON committare mai il file .env.local con valori reali
# 2. Aggiungi .env.local al .gitignore
# 3. Per il deployment su GitHub Pages, aggiungi le variabili come Secrets nel repository